{
  "name": "@vforsh/browsey",
  "version": "0.1.0",
  "description": "Mobile-friendly web file browser CLI",
  "type": "module",
  "bin": {
    "browsey": "dist/browsey"
  },
  "main": "./dist/browsey",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "dev": "bun run src/bin.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "commander": "^14.0.0",
    "get-port": "^7.1.0",
    "highlight.js": "^11.11.1",
    "lucide-static": "^0.562.0",
    "marked": "^17.0.1",
    "marked-highlight": "^2.2.3",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/qrcode-terminal": "^0.12.2",
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vforsh/browsey.git"
  },
  "author": "vforsh",
  "license": "MIT",
  "keywords": [
    "file-browser",
    "file-server",
    "mobile",
    "cli"
  ]
